{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2015",
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "dom",
            "ES2015",
            "es2016.array.include",
            "es2017.string",
            "es2017.object",
            "es2018.promise",
            "es2015.reflect",
            "es2017.typedarrays"
        ]
    },
    "include": [ "./sources/ts/**/*" ],
    "exclude": [ "./sources/ts/tests/**/*" ]
}